{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!!**/node_modules", "!!**/dist", "!!**/.turbo", "!!**/.pnpm-store"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"recommended": true
			}
		}
	}
}
